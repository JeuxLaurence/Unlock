<div class="container">
	<div class="row mt-3">
		<div class="col" {{on "click" this.back}}>
			{{fa-icon "arrow-left"}}<span class="ml-2">Retour</span>
		</div>
	</div>

	<div class="row">
		<div class="col text-center">
			<h3>Machine 38</h3>
		</div>
	</div>

	<div class="row">
		<div class="col">
			<div class="box">
				<img src="assets/images/green_square.png" class="gift_box">
     	 	</div>
     	 	<div class="box empty-gift" {{on "click" (fn this.moveImageDown)}}>
				
     	 	</div>
     	 	<div class="box empty-gift">
				
     	 	</div>
     	 	<div class="box empty-gift">
				
     	 	</div>
     	 	<div class="box empty-gift">
				
     	 	</div>
     	 	<div class="box empty-gift">
				
     	 	</div>
     	 	<div class="box empty-gift">
				
     	 	</div>
		</div>
	</div>

	<div class="row mb-3 mt-3">
		<div class="col text-center">
			{{fa-icon "arrow-up"}}
			{{fa-icon "arrow-down"}}
		</div>
	</div>

	<div class="row mb-3" id="empty-gift-row">
		<div class="col text-center">
			<div class="box">
				<img src="assets/images/blue_hexagon.png" class="gift_box" {{on "click" (fn this.moveImageUp "blue_hexagon")}}>
     	 	</div>
     	 	<div class="box">
				<img src="assets/images/yellow_trapeze.png" class="gift_box" {{on "click" (fn this.moveImageUp "yellow_trapeze")}}>
     	 	</div>
     	 	<div class="box">
				<img src="assets/images/green_circle.png" class="gift_box" {{on "click" (fn this.moveImageUp "green_circle")}}>
     	 	</div>
     	 	<div class="box">
				<img src="assets/images/red_triangle.png" class="gift_box" {{on "click" (fn this.moveImageUp "red_triangle")}}>
     	 	</div>
     	 	<div class="box">
				<img src="assets/images/blue_triangle.png" class="gift_box" {{on "click" (fn this.moveImageUp "blue_triangle")}}>
     	 	</div>
     	 	<div class="box">
				<img src="assets/images/yellow_square.png" class="gift_box" {{on "click" (fn this.moveImageUp "yellow_square")}}>
     	 	</div>
		</div>
	</div>

	{{#if this.isCodeError}}
	<div class="row mb-3 mt-3">
		<div class="col text-center">
			<div class="alert alert-danger" role="alert">
			  Invalide
			</div>
		</div>
	</div>
	{{/if}}

	{{#if this.isCodeSuccess}}
	<div class="row mb-3 mt-3">
		<div class="col text-center">
			<div class="alert alert-success" role="alert">
			  {{model.unlock}}
			</div>
		</div>
	</div>
	{{/if}}
</div>