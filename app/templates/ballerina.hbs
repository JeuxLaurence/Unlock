<div class="container">
	<div class="row mt-3 mb-3">
		<div class="col" {{on "click" this.back}}>
			{{fa-icon "arrow-left"}}<span class="ml-2">Retour</span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="col text-center">
			<h3>Machine #17</h3>
		</div>
	</div>

	<div class="row mb-2">
		<div class="col text-center">
     	 	<div class="card" id="image-container" {{action "colorMe"}}>
     	 	  <img src="assets/images/17_ballerina.jpg" id="image-ballerina" style="width: 600px; height: 319px;">
			  <canvas id="peintureCanvas" width="600" height="319"></canvas>
			  <div class="card-body">
			  	<a href="#" {{action "resetCircle"}}>Reset</a>
			    <p class="card-text">
			    	Vous devez faire avancer la ballerine jusqu’à l’autre point jaune. Attention, vous devez passer par tous les points et il est interdit de passer deux fois par le même point.
			    </p>
			    <button class="btn btn-primary" type="button" {{on "click" this.verify}}>Réussi?</button>
			  </div>
			</div>
     	</div>
	</div>

	{{#if this.isMachineError}}
	<div class="row mb-3 mt-3">
		<div class="col text-center">
			<div class="alert alert-danger" role="alert">
			  Réponse invalide
			</div>
		</div>
	</div>
	{{/if}}

	{{#if this.isMachineSuccess}}
	<div class="row mb-3 mt-3">
		<div class="col text-center">
			<div class="alert alert-success" role="alert">
			  La boîte à musique s’ouvre. Retournez la carte 46.
			</div>
		</div>
	</div>
	{{/if}}
</div>
