<div class="container">
	<div class="row mt-3 mb-3">
		<div class="col" {{on "click" this.back}}>
			{{fa-icon "arrow-left"}}<span class="ml-2">Retour</span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="col text-center">
			<h3>Machine</h3>
		</div>
	</div>

	<div class="row">
		<div class="col">
			<div class="input-group input-group-lg">
			  <div class="input-group-prepend">
			    <span class="input-group-text" id="card-number">Carte #</span>
			  </div>
			  {{input type="text" class="form-control" id="card-number" value=cardNumber}}
			</div>
			<button type="submit" class="btn btn-primary float-right mt-2" {{on "click" this.fetchMachine}}>Ok</button>
		</div>
	</div>

	{{#if this.isErrorNumber}}
	<div class="row mb-3 mt-3">
		<div class="col text-center">
			<div class="alert alert-danger" role="alert">
			  Numéro de carte non trouvé
			</div>
		</div>
	</div>
	{{/if}}
</div>