<div class="container">
	<div class="row mt-3 mb-3">
		<div class="col" {{on "click" this.back}}>
			{{fa-icon "arrow-left"}}<span class="ml-2">Retour</span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="col text-center">
			<h3>Code #{{@model.id}}</h3>
		</div>
	</div>

	{{#each @model.answer as |color|}}
	<div class="row mb-2">
		<div class="col text-center">
     	 	<div class="box color-grey" {{on "click" this.nextColor}}>
     	 	</div>
     	</div>
	</div>
	{{/each}}

	<div class="row">
		<div class="col">
			<button type="submit" class="btn btn-primary float-right mt-2" {{on "click" this.verifyCode}}>VÃ©rifier</button>
		</div>
	</div>

	{{#if this.isCodeError}}
	<div class="row mb-3 mt-3">
		<div class="col text-center">
			<div class="alert alert-danger" role="alert">
			  Invalide
			</div>
		</div>
	</div>
	{{/if}}

	{{#if this.isCodeSuccess}}
	<div class="row mb-3 mt-3">
		<div class="col text-center">
			<div class="alert alert-success" role="alert">
			  Tu peux maitenant tourner la(les) cartes {{model.unlock}}
			</div>
		</div>
	</div>
	{{/if}}
</div>