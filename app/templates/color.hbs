<div class="container">
	<div class="row mt-3 mb-3">
		<div class="col" {{on "click" this.back}}>
			{{fa-icon "arrow-left"}}<span class="ml-2">Retour</span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="col text-center">
			<h3>Machine 67</h3>
		</div>
	</div>

	<div class="row mb-2">
		<div class="col text-center">
			{{#each @model.answer as |color|}}
     	 	<div class="box color-grey" {{on "click" this.nextColor}}>
     	 	</div>
     	 	{{/each}}
     	</div>
	</div>
	
	<div class="row">
		<div class="col">
			<button type="submit" class="btn btn-primary float-right mt-2" {{on "click" this.verifyCode}}>VÃ©rifier</button>
		</div>
	</div>

	{{#if this.isCodeError}}
	<div class="row mb-3 mt-3">
		<div class="col text-center">
			<div class="alert alert-danger" role="alert">
			  Invalide
			</div>
		</div>
	</div>
	{{/if}}

	{{#if this.isCodeSuccess}}
	<div class="row mb-3 mt-3">
		<div class="col text-center">
			<div class="alert alert-success" role="alert">
			  {{model.unlock}}
			</div>
		</div>
	</div>
	{{/if}}
</div>